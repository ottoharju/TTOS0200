<Window x:Class="Lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab11._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="275">
    <Grid>
        <CheckBox x:Name="chb_1" Content="Milk" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="9,3,0,0" Height="20" Width="101" FontSize="16"/>
