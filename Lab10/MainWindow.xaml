        <CheckBox x:Name="chb_3" Content="Beer" HorizontalAlignment="Left" Margin="9,75,0,0" VerticalAlignment="Top" FontSize="16"/>
        <CheckBox x:Name="chb_4" Content="Chicken" HorizontalAlignment="Left" Margin="9,110,0,0" VerticalAlignment="Top" FontSize="16"/>
        <CheckBox x:Name="chb_5" Content="Lemonade" HorizontalAlignment="Left" Margin="9,144,0,0" VerticalAlignment="Top" FontSize="16"/>
