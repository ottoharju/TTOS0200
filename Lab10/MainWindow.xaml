        <Button x:Name="btnBuy" Content="Buy" HorizontalAlignment="Left" Margin="8,179,0,0" VerticalAlignment="Top" Width="52" Height="32" FontSize="14" FontWeight="Bold" Click="btnBuy_Click"/>
        <TextBlock x:Name="txbShoppinglist" HorizontalAlignment="Left" Margin="9,246,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="62" Width="247" FontSize="14"/>

    </Grid>
</Window>
        
    </Grid>
</Window>
