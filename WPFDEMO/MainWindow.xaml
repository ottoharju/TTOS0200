        <TextBlock x:Name="txbMessu" HorizontalAlignment="Left" Margin="113,185,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Height="19" Width="182"/>
        <Button Content="Suurenna tekstiä" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Margin="177,80,0,0"/>
        <ComboBox x:Name="cmbVarit" HorizontalAlignment="Left" Margin="325,80,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbVarit_SelectionChanged"/>

    </Grid>
</Window>
